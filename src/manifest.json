{
    "manifest_version": 3,
    "name": "Secure HTTPS Proxy Connector",
    "version": "0.1.0",
    "description": "Connects securely to your remote HTTPS proxy server.",
    "action": {
        "default_popup": "index.html",
        "default_title": "Proxy Settings",
        "default_icon": {
            "16": "img/thunder.png",
            "32": "img/thunder.png",
            "48": "img/thunder.png",
            "128": "img/thunder.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "proxy",
        "storage",
        "webRequest",
        "webRequestAuthProvider",
        "notifications"

    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "img/thunder.png",
        "32": "img/thunder.png",
        "48": "img/thunder.png",
        "128": "img/thunder.png"
    }
}
